# BookForge API Settings
DEBUG=true
LOG_LEVEL=INFO

# Redis Configuration (for job queue)
# For local development: redis://localhost:6379/0
# For Docker Compose: redis://redis:6379/0
REDIS_URL=redis://localhost:6379/0

# File Storage
TEMP_DIR=./temp_books
OUTPUT_DIR=./generated_epubs
MAX_FILE_SIZE=50MB

# GitHub Integration
GITHUB_TOKEN=

# EPUB Generation
DEFAULT_THEME=modern
EPUB_VALIDATION=true

# API Configuration
MAX_CONCURRENT_JOBS=10
JOB_TIMEOUT=300

# Server Configuration (optional - defaults in config.py)
HOST=0.0.0.0
PORT=8000